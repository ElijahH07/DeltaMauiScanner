<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            
             x:Class="DeltaMauiScanner.GamePage"
             Title="GamePage">
    <Grid RowDefinitions="Auto, *" BackgroundColor="black">
        <VerticalStackLayout
        Grid.Row="0"
        Padding="15, 0"
        Spacing="15"
        BackgroundColor="Black">

            <Label 
                Margin="0, 20, 0, 0"
            Text="DeltaScanner"
            Padding="5"
            FontFamily="PressStart2P-Regular"
            FontSize="26"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            TextColor="White"/>
            <Label 
            x:Name="countDown"
            Text="Countdown: 15 s"
            FontFamily="PressStart2P-Regular"
            FontSize="15"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            TextColor="White"/>

            <Label
            x:Name="PointTracker"
            Text="TOTAL POINTS: "
            FontFamily="PressStart2P-Regular"
            FontSize="15"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            TextColor="White"/>

            <Button
            x:Name="StartGameButton"
            Text="Start Game"
            Clicked="onStartClicked"
            Padding="15"
            FontFamily="PressStart2P-Regular"
            FontSize="25"
            HorizontalOptions="Fill"
            Margin="0,0,0,10"/>
        </VerticalStackLayout>

        <!-- Row 2: Inventory List -->
        <ListView x:Name ="GameList" Grid.Row="1" ItemsSource="{Binding Barcodes}" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding BData}" FontFamily="PressStart2P-Regular" TextColor="white" FontSize="15" Margin="25,15,0,0"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
    
    
</ContentPage>